{
  "name": "web",
  "version": "0.0.1",
  "description": "Web V3",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --fix .",
    "test": "jest --watch",
    "test:badges": "npm run test:coverage  && jest-coverage-badges --output ./badges",
    "test:coverage": "jest --colors --coverage --forceExit"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{ts,tsx}": [
      "npm run test:badges",
      "eslint --fix --max-warnings=0",
      "jest --forceExit --findRelatedTests --maxWorkers=2"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SapienNetwork/web.git"
  },
  "keywords": [
    "react",
    "nextjs",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SapienNetwork/web/issues"
  },
  "homepage": "https://github.com/SapienNetwork/web#readme",
  "dependencies": {
    "@commitlint/cli": "^11.0.0",
    "@material-ui/core": "^4.11.3",
    "@sentry/browser": "^6.0.1",
    "@sentry/integrations": "^6.0.2",
    "@sentry/node": "^6.0.2",
    "@sentry/webpack-plugin": "^1.14.0",
    "commitlint-config-jira": "^1.4.1",
    "commitlint-plugin-jira-rules": "^1.4.0",
    "jest-coverage-badges": "^1.1.2",
    "next": "^10.0.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@testing-library/dom": "^7.29.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@testing-library/react-hooks": "^5.0.3",
    "@testing-library/user-event": "^12.6.2",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/react": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1"
  },
  "engines": {
    "node": ">=15.0.0"
  }
}
